{
    "name": "geekmusclay/framework",
    "type": "project",
    "version": "0.1.0",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Geekmusclay\\Framework\\": "src/",
            "Modules\\": "modules/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "geekmusclay",
            "email": "contact@geekmusclay.com"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../router"
        },
        {
            "type": "path",
            "url": "../orm"
        },
        {
            "type": "path",
            "url": "../di-container"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/psr7": "^2.4",
        "http-interop/response-sender": "^1.0",
        "geekmusclay/router": "^0.3",
        "geekmusclay/orm": "^0.2",
        "twig/twig": "^3.4",
        "geekmusclay/di-container": "^0.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8",
        "laminas/laminas-coding-standard": "^2.4",
        "symfony/var-dumper": "^5.4"
    },
    "scripts": {
        "analyse": "vendor\\bin\\phpstan analyse -c phpstan.neon",
        "tests": "vendor\\bin\\phpunit tests",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
